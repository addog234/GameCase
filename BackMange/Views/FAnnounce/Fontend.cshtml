@{
    Layout = "_FrontendLayout";
}
@model IEnumerable<BackMange.DTO.AnnounceCategoryDTO>

@section Styles
{   
    <link href="https://cdn.datatables.net/v/bs5/dt-2.2.1/datatables.min.css" rel="stylesheet" />
    <link href="~/frontuse/css/index.css" rel="stylesheet" />
    <link href="~/css/Announce/Announce.css" rel="stylesheet" />
}
<!-- 主內容 -->
<main class="announce-container">
    <div class="pixel-background"></div>
    <section class="w-100 d-flex" style="min-height: calc(100vh - 176px)">
        <!-- 側邊篩選欄位 -->
        <aside class="col-3 d-flex justify-content-center align-items-start pt-4">
            <div class="sidebar p-4 bg-white rounded-4 shadow">
                <h3 class="mb-4 text-primary">
                    <i class="fas fa-bullhorn me-2"></i>公告類別
                </h3>
                <hr class="mb-4" />
                <ul class="list-unstyled">                        
                    <li class="mb-3">
                        <a href="#"
                        class="category-filter text-decoration-none text-dark d-flex align-items-center" data-category-id="0">
                            <i class="fas fa-newspaper me-2"></i>全部
                        </a>
                    </li>
                    @foreach (var category in Model)
                    {
                        <li class="mb-3">
                            <a href="#"
                                class="category-filter text-decoration-none text-dark d-flex align-items-center" data-category-id="@category.FCategoryId">
                                <i class="fas fa-newspaper me-2"></i>@category.FCategoryName
                            </a>
                        </li>
                    }                    
                        
                </ul>
            </div>
        </aside>
        <!-- 公告內容 -->
        <article class="col-9 d-flex justify-content-center align-items-start pt-4 pe-5">

            <div class="card w-100 rounded-4 shadow-sm border-0 m-3">
                @* tab *@
                <div class="card-header bg-primary text-white py-3 rounded-top-4">
                    <h4 class="mb-0"><i class="fas fa-list-ul me-2"></i>最新公告</h4>
                </div>
                <table id="FontannounceTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col" class="py-3">公告標題</th>
                            <th scope="col" class="py-3 text-end">發布時間</th>
                        </tr>
                    </thead>
                </table>

            </div>
        </article>
    </section>
</main>
@section Scripts
{
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap JS 和相依套件 -->
    <script src="https://cdn.datatables.net/v/bs5/dt-2.2.1/datatables.min.js"></script>
    <script src="~/js/Announce/FontAnnounceTable.js"></script>
}        
