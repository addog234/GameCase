        const ownerId = @Model.FposterId;
        const currentUserId = @Model.CurrentUserId;

        $(document).ready(function () {
            $("#applyTaskBtn").click(function () {
                 // 在 ajax 呼叫前先檢查變數值
                console.log('發送通知的變數值：', {
                    ownerId,
