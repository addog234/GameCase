                                text: response.message,
                                confirmButtonColor: '#d33',
                                confirmButtonText: '了解'
                            });

                            // 如果需要跳轉到登入頁
                            if (response.redirect) {
                                window.location.href = response.redirect;
                            }
                        }
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: '發生錯誤',
                            text: '請稍後再試！',
                            confirmButtonColor: '#d33',
