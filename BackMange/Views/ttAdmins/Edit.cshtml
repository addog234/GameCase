@model BackMange.DTO.CAdminDTO
@{
    ViewData["Title"] = "Edit";
}

<h1>編輯管理員資料</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!--  確保 FadminId 正確傳遞 -->
            <input type="hidden" asp-for="FadminId" />

            <!--  管理員編號 (不可修改) -->
            <div class="form-group">
                <label asp-for="FadminNo" class="control-label"></label>
                <input asp-for="FadminNo" class="form-control" readonly
                       style="background-color: rgba(233, 236, 239, 0.5); border: 1px solid #ced4da;" />
            </div>

            <!--  姓名 -->
            <div class="form-group">
                <label asp-for="FfullName" class="control-label"></label>
                <input asp-for="FfullName" class="form-control" />
                <span asp-validation-for="FfullName" class="text-danger"></span>
            </div>

            <!--  Email -->
            <div class="form-group">
                <label asp-for="Femail" class="control-label"></label>
                <input asp-for="Femail" class="form-control" />
                <span asp-validation-for="Femail" class="text-danger"></span>
            </div>

            <!--  密碼 -->
            <div class="form-group">
                <label asp-for="FadmPassword" class="control-label"></label>
                <input asp-for="FadmPassword" class="form-control" type="password" placeholder="留空則不修改密碼" />
                <span asp-validation-for="FadmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="請再次輸入密碼" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <!--  手機號碼 -->
            <div class="form-group">
                <label asp-for="FmobilePhone" class="control-label"></label>
                <input asp-for="FmobilePhone" class="form-control" />
                <span asp-validation-for="FmobilePhone" class="text-danger"></span>
            </div>

            <!--  管理員等級 -->
            <div class="form-group">
                <label asp-for="FadminLevel" class="control-label"></label>
                <select asp-for="FadminLevel" class="form-control">
                    <option value="1" selected="@(Model.FadminLevel == 1)">一級管理員</option>
                    <option value="2" selected="@(Model.FadminLevel == 2)">二級管理員</option>
                    <option value="3" selected="@(Model.FadminLevel == 3)">三級管理員</option>
                </select>
            </div>

            <!--  帳號狀態 -->
            <div class="form-group">
                <label asp-for="FstatusId" class="control-label"></label>
                <select asp-for="FstatusId" class="form-control">
                    <option value="1" selected="@(Model.FstatusId == 1)">啟用中</option>
                    <option value="2" selected="@(Model.FstatusId == 2)">停用中</option>
                    <option value="3" selected="@(Model.FstatusId == 3)">已刪除</option>
                </select>
            </div>

            <!--  確保不影響系統欄位 -->
            <input type="hidden" asp-for="FcreatedAt" />
            <input type="hidden" asp-for="FupdatedAt" />

            <!--  操作按鈕 -->
            <div class="form-group mt-3">
                <input type="submit" value="儲存" class="btn btn-primary" />
                <a asp-action="List" class="btn btn-secondary">返回列表</a>
            </div>
        </form>
    </div>
</div>

